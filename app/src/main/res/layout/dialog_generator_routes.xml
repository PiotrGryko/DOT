<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/cogs" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="route" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_bottomleft"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@drawable/arrow_bottom_left" />

        <ImageView
            android:id="@+id/tv_lefttop"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@drawable/arrow_top_left" />

        <ImageView
            android:id="@+id/tv_bottomright"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@drawable/arrow_bottom_right" />

        <ImageView
            android:id="@+id/tv_righttop"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@drawable/arrow_top_right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_leftright"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@drawable/arrow_horizontal" />

        <ImageView
            android:id="@+id/tv_bottomtop"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@drawable/arrow_vertical" />

        <ImageView
            android:id="@+id/tv_blank"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@drawable/trash" />


    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="start" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_starttop"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@drawable/arrow_bottom" />

        <ImageView
            android:id="@+id/tv_startbottom"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@drawable/arrow_top" />

        <ImageView
            android:id="@+id/tv_startleft"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@drawable/arrow_right" />

        <ImageView
            android:id="@+id/tv_startright"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@drawable/arrow_left" />

    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="finish" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_finishtop"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@drawable/arrow_top" />

        <ImageView
            android:id="@+id/tv_finishbottom"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@drawable/arrow_bottom" />

        <ImageView
            android:id="@+id/tv_finishleft"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@drawable/arrow_left" />

        <ImageView
            android:id="@+id/tv_finishright"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@drawable/arrow_right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="route sound"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView

                    android:id="@+id/btn_choose_sound"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="choose sound" />

                <ImageView
                    android:id="@+id/btn_play_sound"
                    android:layout_width="20dp"

                    android:layout_height="20dp"
                    android:soundEffectsEnabled="false"
                    android:src="@drawable/play_btn" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>