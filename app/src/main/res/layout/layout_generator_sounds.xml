<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_sounds"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="background sound"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_play_background"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:soundEffectsEnabled="false"
                    android:src="@drawable/play_btn" />


                <TextView

                    android:id="@+id/btn_choose_background"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="choose sound" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="press sound"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_play_press"
                    android:layout_width="20dp"

                    android:layout_height="20dp"
                    android:soundEffectsEnabled="false"
                    android:src="@drawable/play_btn" />

                <TextView
                    android:id="@+id/btn_choose_press"

                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="choose sound" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="crash sound"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_play_crash"
                    android:layout_width="20dp"

                    android:layout_height="20dp"
                    android:soundEffectsEnabled="false"
                    android:src="@drawable/play_btn" />

                <TextView

                    android:id="@+id/btn_choose_crash"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="choose sound" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="finish sound"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_play_finish"
                    android:layout_width="20dp"

                    android:layout_height="20dp"
                    android:soundEffectsEnabled="false"
                    android:src="@drawable/play_btn" />

                <TextView

                    android:id="@+id/btn_choose_finish"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="choose sound" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>