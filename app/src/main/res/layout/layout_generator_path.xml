<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/rounded_bkg"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_routes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="start" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_starttop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/abc_list_selector_holo_light"
                android:soundEffectsEnabled="false"
                android:src="@drawable/arrow_bottom" />

            <ImageView
                android:id="@+id/tv_startbottom"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/abc_list_selector_holo_light"
                android:soundEffectsEnabled="false"
                android:src="@drawable/arrow_top" />

            <ImageView
                android:id="@+id/tv_startleft"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/abc_list_selector_holo_light"
                android:soundEffectsEnabled="false"
                android:src="@drawable/arrow_right" />

            <ImageView
                android:id="@+id/tv_startright"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/abc_list_selector_holo_light"
                android:soundEffectsEnabled="false"
                android:src="@drawable/arrow_left" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="route" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_bottomleft"
                android:layout_width="40dp"

                android:layout_height="40dp"
                android:background="@drawable/abc_list_selector_holo_light"
                android:soundEffectsEnabled="false"
                android:src="@drawable/arrow_bottom_left" />

            <ImageView
                android:id="@+id/tv_lefttop"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/abc_list_selector_holo_light"
                android:soundEffectsEnabled="false"
                android:src="@drawable/arrow_top_left" />

            <ImageView
                android:id="@+id/tv_bottomright"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/abc_list_selector_holo_light"
                android:soundEffectsEnabled="false"
                android:src="@drawable/arrow_bottom_right" />

            <ImageView
                android:id="@+id/tv_righttop"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/abc_list_selector_holo_light"
                android:soundEffectsEnabled="false"
                android:src="@drawable/arrow_top_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_leftright"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/abc_list_selector_holo_light"
                android:soundEffectsEnabled="false"
                android:src="@drawable/arrow_horizontal" />

            <ImageView
                android:id="@+id/tv_bottomtop"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/abc_list_selector_holo_light"
                android:soundEffectsEnabled="false"
                android:src="@drawable/arrow_vertical" />


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="finish" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_finishtop"
                android:layout_width="40dp"

                android:layout_height="40dp"
                android:background="@drawable/abc_list_selector_holo_light"
                android:soundEffectsEnabled="false"
                android:src="@drawable/arrow_top" />

            <ImageView
                android:id="@+id/tv_finishbottom"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/abc_list_selector_holo_light"
                android:soundEffectsEnabled="false"
                android:src="@drawable/arrow_bottom" />

            <ImageView
                android:id="@+id/tv_finishleft"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/abc_list_selector_holo_light"
                android:soundEffectsEnabled="false"
                android:src="@drawable/arrow_left" />

            <ImageView
                android:id="@+id/tv_finishright"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/abc_list_selector_holo_light"
                android:soundEffectsEnabled="false"
                android:src="@drawable/arrow_right" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>