<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/cogs" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="world name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/tv_route_color"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Route" />

                <View
                    android:id="@+id/color_route"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_margin="5dp"></View>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_background_color"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Background" />

                <View
                    android:id="@+id/color_background"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_margin="5dp"></View>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_dot_color"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"


                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Dot" />


                <View
                    android:id="@+id/color_dot"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_margin="5dp"></View>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_explosion_start_color"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Explosion start" />


                <View
                    android:id="@+id/color_explosion_start"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_margin="5dp"></View>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_explosion_end_color"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Explosion end" />

                <View
                    android:id="@+id/color_explosion_end"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_margin="5dp"></View>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="background sound"
                        android:textStyle="bold" />

                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/abc_list_selector_holo_light"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView

                            android:id="@+id/btn_choose_background"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="choose sound" />

                        <ImageView
                            android:id="@+id/btn_play_background"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:soundEffectsEnabled="false"
                            android:src="@drawable/play_btn" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="press sound"
                        android:textStyle="bold" />

                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/abc_list_selector_holo_light"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/btn_choose_press"

                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="choose sound" />

                        <ImageView
                            android:id="@+id/btn_play_press"
                            android:layout_width="20dp"

                            android:layout_height="20dp"
                            android:soundEffectsEnabled="false"
                            android:src="@drawable/play_btn" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="crash_sound"
                        android:textStyle="bold" />

                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/abc_list_selector_holo_light"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView

                            android:id="@+id/btn_choose_crash"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="choose sound" />

                        <ImageView
                            android:id="@+id/btn_play_crash"
                            android:layout_width="20dp"

                            android:layout_height="20dp"
                            android:soundEffectsEnabled="false"
                            android:src="@drawable/play_btn" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="finish sound"
                        android:textStyle="bold" />

                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/abc_list_selector_holo_light"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView

                            android:id="@+id/btn_choose_finish"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="choose sound" />

                        <ImageView
                            android:id="@+id/btn_play_finish"
                            android:layout_width="20dp"

                            android:layout_height="20dp"
                            android:soundEffectsEnabled="false"
                            android:src="@drawable/play_btn" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_save"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_btn_selector"
        android:padding="10dp"
        android:src="@drawable/floppydisc" />


</LinearLayout>