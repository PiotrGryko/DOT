<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_config"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <pl.slapps.dot.layout.FontedTextView
                android:id="@+id/tv_load"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Load stage" />

            <pl.slapps.dot.layout.FontedTextView
                android:id="@+id/tv_load_online"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Load online stage" />


            <pl.slapps.dot.layout.FontedTextView
                android:id="@+id/tv_delete_online"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="delete online stage" />



        </LinearLayout>

    </LinearLayout>

</LinearLayout>