<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_world"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <pl.slapps.dot.layout.FontedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name" />

            <EditText
                android:id="@+id/et_world_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/tv_world_route_color"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"

                android:orientation="horizontal">

                <View
                    android:id="@+id/color_world_route"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_margin="5dp"></View>

                <pl.slapps.dot.layout.FontedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Route" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_world_background_color"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"

                android:orientation="horizontal">

                <View
                    android:id="@+id/color_world_background"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_margin="5dp"></View>

                <pl.slapps.dot.layout.FontedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Background" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_dot_world_color"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"


                android:orientation="horizontal">

                <View
                    android:id="@+id/color_world_dot"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_margin="5dp"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Dot" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_world_explosion_start_color"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"

                android:orientation="horizontal">

                <View
                    android:id="@+id/color_world_explosion_start"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_margin="5dp"></View>

                <pl.slapps.dot.layout.FontedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Explosion start" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_world_explosion_end_color"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_light"
                android:orientation="horizontal">

                <View
                    android:id="@+id/color_world_explosion_end"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_margin="5dp"></View>

                <pl.slapps.dot.layout.FontedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Explosion end" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <pl.slapps.dot.layout.FontedTextView
                        custom:bold="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="background sound"
                        android:textStyle="bold" />

                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/abc_list_selector_holo_light"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btn_play_world_background"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:soundEffectsEnabled="false"
                            android:src="@drawable/play_btn" />

                        <pl.slapps.dot.layout.FontedTextView

                            android:id="@+id/btn_choose_world_background"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="choose sound" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <pl.slapps.dot.layout.FontedTextView
                        custom:bold="true"

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="press sound"
                        android:textStyle="bold" />

                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/abc_list_selector_holo_light"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btn_play_world_press"
                            android:layout_width="20dp"

                            android:layout_height="20dp"
                            android:soundEffectsEnabled="false"
                            android:src="@drawable/play_btn" />

                        <pl.slapps.dot.layout.FontedTextView
                            android:id="@+id/btn_choose_world_press"

                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="choose sound" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <pl.slapps.dot.layout.FontedTextView
                        custom:bold="true"

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="crash_sound"
                        android:textStyle="bold" />

                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/abc_list_selector_holo_light"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btn_play_world_crash"
                            android:layout_width="20dp"

                            android:layout_height="20dp"
                            android:soundEffectsEnabled="false"
                            android:src="@drawable/play_btn" />

                        <pl.slapps.dot.layout.FontedTextView

                            android:id="@+id/btn_choose_world_crash"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="choose sound" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <pl.slapps.dot.layout.FontedTextView
                        custom:bold="true"

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="finish sound"
                        android:textStyle="bold" />

                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/abc_list_selector_holo_light"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btn_play_world_finish"
                            android:layout_width="20dp"

                            android:layout_height="20dp"
                            android:soundEffectsEnabled="false"
                            android:src="@drawable/play_btn" />

                        <pl.slapps.dot.layout.FontedTextView

                            android:id="@+id/btn_choose_world_finish"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="choose sound" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/btn_save_world"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_btn_selector"
            android:padding="10dp"
            android:src="@drawable/floppydisc" />


    </LinearLayout>

</LinearLayout>